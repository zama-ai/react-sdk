{
  "name": "@zama-fhe/core-sdk",
  "version": "0.1.0",
  "description": "Framework-agnostic core SDK for Fully Homomorphic Encryption (FHE) on EVM chains",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "default": "./dist/actions/index.js"
    },
    "./chains": {
      "types": "./dist/chains/index.d.ts",
      "default": "./dist/chains/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "default": "./dist/providers/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "watch": "tsc -p tsconfig.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "fhe",
    "fhevm",
    "fully-homomorphic-encryption",
    "zama",
    "ethereum",
    "evm",
    "web3",
    "privacy",
    "confidential",
    "encryption",
    "core",
    "framework-agnostic"
  ],
  "author": "Zama",
  "license": "BSD-3-Clause-Clear",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zama-ai/core-sdk.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@zama-fhe/shared": "workspace:*",
    "@zama-fhe/relayer-sdk": "0.4.0"
  },
  "peerDependencies": {
    "ethers": "^6.0.0",
    "viem": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    },
    "viem": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "~18.19.130",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "~5.8.3",
    "vitest": "~2.1.9"
  }
}
